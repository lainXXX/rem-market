<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.javarem.infrastructure.dao.mapper.RaffleActivityOrderMapper">

    <resultMap id="BaseResultMap" type="top.javarem.infrastructure.dao.entity.RaffleActivityOrder">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userId" column="user_id" jdbcType="VARCHAR"/>
            <result property="activityId" column="activity_id" jdbcType="BIGINT"/>
            <result property="activityName" column="activity_name" jdbcType="VARCHAR"/>
            <result property="sku" column="sku" jdbcType="BIGINT"/>
            <result property="strategyId" column="strategy_id" jdbcType="BIGINT"/>
            <result property="orderId" column="order_id" jdbcType="VARCHAR"/>
            <result property="orderTime" column="order_time" jdbcType="TIMESTAMP"/>
            <result property="totalCount" column="total_count" jdbcType="INTEGER"/>
            <result property="dayCount" column="day_count" jdbcType="INTEGER"/>
            <result property="monthCount" column="month_count" jdbcType="BIGINT"/>
            <result property="status" column="status" jdbcType="VARCHAR"/>
            <result property="outBusinessNo" column="out_business_no" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

        <select id="queryRaffleActivityOrderByUserId" resultType="top.javarem.infrastructure.dao.entity.RaffleActivityOrder">
            select user_id, sku, activity_id, activity_name, strategy_id, order_id, order_time, status
            from raffle_activity_order
            where user_id = #{userId}
        </select>

</mapper>
